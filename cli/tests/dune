; Run sequential tiny tests (seq/)
(rule
 (alias runtest)
 (deps (glob_files seq/*.toml))
 (action (run %{exe:../bin/main.exe} seqtiny %{project_root}/cli/tests)))

; Run sequential full tests (seq/)
(rule
 (alias runtest)
 (deps (glob_files seq/*.toml))
 (action (run %{exe:../bin/main.exe} seq %{project_root}/cli/tests)))

; Run UM Promising tiny tests (seq/ + ump/)
(rule
 (alias runtest)
 (deps (glob_files seq/*.toml) (glob_files ump/*.toml))
 (action (run %{exe:../bin/main.exe} umptiny %{project_root}/cli/tests)))

; Run UM Promising full tests (seq/ + ump/)
(rule
 (alias runtest)
 (deps (glob_files seq/*.toml) (glob_files ump/*.toml))
 (action (run %{exe:../bin/main.exe} ump %{project_root}/cli/tests)))

; Run all VM Promising tests (seq/ + ump/ + vmp/)
(rule
 (alias runtest)
 (deps (glob_files seq/*.toml) (glob_files ump/*.toml) (glob_files vmp/*.toml))
 (action (run %{exe:../bin/main.exe} vmptiny %{project_root}/cli/tests)))
